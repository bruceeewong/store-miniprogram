/* pages/home/home.wxss */
@import '../../templates/product/product-tpl.wxss';

.banner {
  height: 400rpx;
}
.banner__item {
  height: 100%;
}
.banner__image {
  width: 100%;
  height: 100%;
}
.theme__title,
.product__title {
  padding: 30rpx;
  text-align: center;
}
.theme-imgs {
  display: flex;
  flex-flow: row wrap;
}
.theme-imgs__item {
  width: 372rpx;
  height: 372rpx;
}
.theme-imgs__item:nth-child(2) {
  margin-left: 6rpx;
}
.theme-imgs__item:nth-child(3) {
  width: 750rpx;
  margin-top: 6rpx;
}
