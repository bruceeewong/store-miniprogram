page {
  background-color: #eee;
}
.address {
  position: relative;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #ddd;
  margin-bottom: 24rpx;
  background-color: #ffffff;
  font-size: 26rpx;
}
.address text {
  display: inline-block;
}
.address__wrapper {
  display: flex;
}
.address__wrapper image {
  width: 26rpx;
  height: 26rpx;
}
.address-user text,
.address-mobile text {
  margin-left: 16rpx;
}
.address-user,
.address-mobile {
  width: 50%;
  display: flex;
  align-items: center;
}
.address__address {
  width: 100%;
  margin-top: 16rpx;
}
.address-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  width: 48rpx;
  height: 48rpx;
  transform: translateY(-50%) rotate(-90deg);
}

.product {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 240rpx;
  padding: 32rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #ddd;
}
.product__image {
  display: inline-block;
  width: 176rpx;
  height: 176rpx;
  background-color: #f5f6f5;
}
.product__title {
  display: inline-block;
  margin-left: 16rpx;
  width: 340rpx;
}
.product-info {
  width: 120rpx;
  margin-left: auto;
  text-align: center;
}
.product-info__price,
.product-info__count {
  display: block;
  line-height: 1.5;
}
.product__title,
.product-info__price {
  font-weight: bold;
}
.product__title {
  font-size: 30rpx;
}
.product-info__price {
  font-size: 32rpx;
}
.product-info__count {
  font-size: 24rpx;
}
