/* pages/my/my.wxss */
page {
  background-color: #eee;
}
.header {
  padding: 24rpx;
  background-color: #ab956d;
}
.user {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user-avatar {
  width: 100rpx;
  height: 100rpx;
}
.user-name {
  color: #fff;
  margin-left: 16rpx;
}
.address-info {
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #ddd;
  font-size: 26rpx;
}
.title {
  position: relative;
  padding: 28rpx;
  border-bottom: 2rpx solid #ddd;
  background-color: #fff;
  font-size: 32rpx;
  text-align: center;
}
.address-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  width: 48rpx;
  height: 48rpx;
  transform: translateY(-50%) rotate(-90deg);
}

.order {
  margin-top: 24rpx;
}
.order-list {
  display: flex;
  flex-direction: column;
}
.order-item__no {
  padding: 16rpx 24rpx;
  border-bottom: 2rpx solid #ddd;
}
.order-item {
  margin-bottom: 24rpx;
  background-color: #fff;
  font-size: 26rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}
.order-item-main {
  display: flex;
  align-items: center;
  padding: 24rpx;
}
.order-item-main__info {
  margin-left: 24rpx;
}
.order-item-main__img {
  width: 200rpx;
  height: 200rpx;
}
.order-item-main__info text {
  display: block;
  max-width: 100%;
}
.order-item-main__status {
  margin-left: auto;
}
.order-item-footer {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-top: 2rpx solid #ddd;
}
.pay-button {
  height: 60rpx;
  padding: 0 48rpx;
  margin-left: auto;
  font-size: 26rpx;
  line-height: 60rpx;
  background-color: #e93f3c;
  border-radius: 0;
  color: #fff;
}
.bottom-line {
  padding: 24rpx;
  text-align: center;
}
